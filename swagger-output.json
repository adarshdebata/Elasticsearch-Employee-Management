{
  "swagger": "2.0",
  "info": {
    "title": "Employee API",
    "description": "Employee Management API",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/data",
  "tags": [
    {
      "name": "Employees",
      "description": "Endpoints related to Employee operations"
    }
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/employees": {
      "get": {
        "description": "Get employees by role, department, or reporting manager",
        "parameters": [
          {
            "name": "role",
            "in": "query",
            "type": "string"
          },
          {
            "name": "department",
            "in": "query",
            "type": "string"
          },
          {
            "name": "reportingManager",
            "in": "query",
            "type": "string"
          }
        ],
        "responses": {
          "default": {
            "description": "Successful operation"
          }
        }
      }
    },
    "/employees/details": {
      "post": {
        "description": "Get employees by multiple IDs or names",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "employeeIds": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "example": ["id1", "id2"]
                },
                "employeeNames": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "example": ["name1", "name2"]
                }
              }
            }
          }
        ],
        "responses": {
          "400": {
            "description": "Bad Request"
          },
          "default": {
            "description": "Successful operation"
          }
        }
      }
    },
    "/employees/details/dob": {
      "post": {
        "description": "Get employees by DOB range",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "startDate": {
                  "type": "string",
                  "example": "1990-01-01"
                },
                "endDate": {
                  "type": "string",
                  "example": "2000-12-31"
                }
              }
            }
          }
        ],
        "responses": {
          "default": {
            "description": "Successful operation"
          }
        }
      }
    },
    "/employees/details/mobile": {
      "post": {
        "description": "Get employees by mobile number",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "mobileNumber": {
                  "type": "string",
                  "example": "1234567890"
                }
              }
            }
          }
        ],
        "responses": {
          "default": {
            "description": "Successful operation"
          }
        }
      }
    },
    "/employees/bulk": {
      "post": {
        "description": "Bulk insert employees",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": { "type": "string", "example": "5" },
                  "employee_name": { "type": "string", "example": "Emily Green" },
                  "role": { "type": "string", "example": "developer" },
                  "department": { "type": "string", "example": "NON IT" },
                  "reporting_manager": { "type": "string", "example": "Jane Smith" },
                  "dob": { "type": "string", "example": "1995-12-01" },
                  "mobile_numbers": {
                    "type": "array",
                    "items": { "type": "string" },
                    "example": ["1234509876", "6543210987"]
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Data entry successful"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}
